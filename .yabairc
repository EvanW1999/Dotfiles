#!/usr/bin/env sh

# add 20 padding to the top and 0 padding to the bottom of every space located on the main display
yabai -m config external_bar main:20:0

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config window_shadow                on
yabai -m config window_border                off
yabai -m config window_border_placement      inset
yabai -m config window_border_width          4
yabai -m config window_border_radius         -1.0
yabai -m config active_window_border_topmost off
# yabai -m config active_window_border_color   0xff775759
# yabai -m config normal_window_border_color   0xff505050
# yabai -m config insert_window_border_color   0xffd75f5f
yabai -m config active_window_border_color   0xff6123A0
yabai -m config normal_window_border_color   0x7f6123A#noborder
yabai -m config insert_window_border_color   0xffCF515C
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  12
yabai -m config bottom_padding               12
yabai -m config left_padding                 12
yabai -m config right_padding                12
yabai -m config window_gap                   10

# If no window on the current space is focused after a window is destroyed or
# minimized, or an application is hidden, focus the window under the cursor.
yabai -m signal --add event=window_destroyed \
  action="~/Projects/scripts/focus_under_cursor.sh"
yabai -m signal --add event=window_minimized \
  action="~/Projects/scripts/focus_under_cursor.sh"
yabai -m signal --add event=application_hidden \
  action="~/Projects/scripts/focus_under_cursor.sh"

yabai -m config debug_output on

yabai -m rule --add app=Preview manage=on
yabai -m rule --add app="System Preferences" manage=off
yabai -m rule --add app=Finder manage=off
yabai -m rule --add app=Messages manage=off

echo "yabai configuration loaded.."
